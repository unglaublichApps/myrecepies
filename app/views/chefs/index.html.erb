<%= render 'shared/page_title', title: "List of all chefs" %>

<div align="center">
  <%= will_paginate %>
  <% @chefs.each do |chef| %>
  <ul class="listing">
    <div class="row">
      <div class="well col-md4 col-md-offset-4">
        <li class="chef-title">
          <li>
            <%= link_to gravatar_for(chef), chef_path(chef) %>
          </li>
          <li>
            <%= link_to chef.chefname.capitalize, chef_path(chef) %>
          </li>
          <li>
            <small><%= pluralize(chef.recipes.count, "recipe") if chef.recipes %></small>
          </li>
        </li>
      </div>
    </div>
  </ul>
  <% end %>
  <%= will_paginate %>
</div>
